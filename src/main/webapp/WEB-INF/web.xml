<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>customerPageSignUp</servlet-name>
        <jsp-file>/customer.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customerPageSignUp</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>customerPageSignIn</servlet-name>
        <jsp-file>/customerSignIn.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customerPageSignIn</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginFromSignIn</servlet-name>
        <servlet-class>service.LoginFromSineInPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginFromSignIn</servlet-name>
        <url-pattern>/login1</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>signInCheck</filter-name>
        <filter-class>service.CustomerSignInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>signInCheck</filter-name>
        <url-pattern>/login1</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>service</servlet-name>
        <servlet-class>service.ServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>service</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newdelivery</servlet-name>
        <servlet-class>service.NewDeliveryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newdelivery</servlet-name>
        <url-pattern>/delivery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>submit</servlet-name>
        <servlet-class>service.SubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>submit</servlet-name>
        <url-pattern>/submit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TrackOrder</servlet-name>
        <servlet-class>service.TrackOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrackOrder</servlet-name>
        <url-pattern>/TrackOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>trackCode</servlet-name>
        <servlet-class>service.TrackCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>trackCode</servlet-name>
        <url-pattern>/trackorder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginFromSignUpPageServlet</servlet-name>
        <servlet-class>service.LoginFromSignUpPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginFromSignUpPageServlet</servlet-name>
        <url-pattern>/login2</url-pattern>
    </servlet-mapping>

</web-app>